    .header__mobile.container
      .header__mobile-wrapper.wrapper
        img.header-middle__logo-image(src="img/logo.svg", alt="babysleep")
        .header-middle__info
          a.header-middle__info-action.js-open-popup(href="javascript:void(0)", data-popup="search", data-icon="search")
          a.header-middle__info-action(href="#", data-icon="burger")
    .header-middle.container
      .header-middle__wrapper.wrapper
        .header-middle__logo
          img.header-middle__logo-image(src="img/logo.svg", alt="babysleep")
          .header-middle__logo-text Центр детского сна и развития №1 в России
        .header-middle__info
          a.header-middle__info-action.js-open-popup(href="javascript:void(0)", data-popup="search", data-icon="search")
          a.header-middle__info-action(href="#", data-icon="profile")
          .header-middle__info-contacts
            p.header-middle__info-tel +7 495 222 02 44
            p.header-middle__info-workhours Будни с 10:00 до 20:00
    .header-bottom.container
      .header-bottom__wrapper.wrapper
        nav.header-bottom__nav
          a.header-bottom__nav-link(href="#", data-menu="about") О нас
          a.header-bottom__nav-link(href="#", data-menu="encyclopedia") Энциклопедия сна
          a.header-bottom__nav-link(href="#", data-menu="consults") Консультации
          a.header-bottom__nav-link(href="#", data-menu="programs") Онлайн-программы
          a.header-bottom__nav-link(href="#", data-menu="feedback") Отзывы
          a.header-bottom__nav-link(href="#", data-menu="events") Мероприятия
        a.header-bottom__nav-link(href="#", data-menu="training") Обучение консультантов
        each val in ["about", "encyclopedia", "consults", "programs", "feedback", "events", "training"]
          .header-bottom__menu(data-menu=val)
            .header-bottom__menu-col
