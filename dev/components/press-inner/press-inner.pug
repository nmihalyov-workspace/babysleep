                .press-inner__actions
                  p.press-inner__actions-date 19.06.20
                  a.press-inner__actions-link(href="#") Журналы
                .press__slider
                  .consultant__slider.slider.js-consultant-slider
                    .consultant__slider-slide
                      .consultant__slider-image(style="background-image: url('img/inhtml/history.jpg');")
                      .consultant__slider-desc Фото из студии радиостанции у микрофона
                      .consultant__slider-logo
                        img.consultant__slider-logo-img(src="img/inhtml/esquire.svg", alt="")
                    .consultant__slider-slide
